extends base.pug

    
block content
    div(class="upload_wrapper edit")
        div(class="upload_container")
            h1 Edit Post
            hr
            div.upload_container_form
                
                form(method="POST" enctype="multipart/form-data")
                    div
                        label(for="thumbnail") Thumbnail
                        input(type="file", id="thumbnail", name="thumbnail", accept="image/*")
                        label(for="video") Video File
                        input(type="file", id="video", accept="video/*" name="video")
                        label Current Thumbnail
                        img(src=video.thumbnailUrl, crossorigin,  width="100", height="100")
                    div
                        label(for="title") Title
                        input(placeholder="Title", id="title", required, type="text", name="title", maxlength=80, value=video.title)
                        label(for="description") Desicription
                        input(placeholder="Description", id="descripttion", required, type="text", name="description" minlength=20, value=video.description)
                        label(for="hashtags") Hashtags
                        input(placeholder="Hashtags, seperated by comma.", id="hashtags", required, type="text", name="hashtags", value=video.hashtags.join())
                        input(value="Save",type="submit")
